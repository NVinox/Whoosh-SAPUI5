<mvc:View
  controllerName="App.core.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:f="sap.f"
  xmlns:grid="sap.ui.layout.cssgrid"
  displayBlock="true">
  <tnt:ToolPage
    class="tool-page">
    <tnt:header>
      <tnt:ToolHeader class="header">
        <HBox 
          class="wrapper sapUiNoContentPadding"
          width="100%"
          justifyContent="SpaceBetween"
          alignItems="Center"  
        >
          <HBox class="subwrapper" alignItems="Center">
            <Image 
              class="header__logo"
              src="/assets/images/logo.svg" 
              />
            <ToolbarSpacer width="48px" />
            <Link text="NY, Manhattan" class="header__link header__link_pin link" />
          </HBox>

          <HBox class="subwrapper" alignItems="Center">
            <SearchField 
              class="header__search search-field" 
              placeholder="Track a Package" 
              width="184px" 
            />
          </HBox>

          <HBox class="subwrapper" alignItems="Center">
            <Link text="Send a Parcel" class="header__link link" />
            <Link text="Become a Courier" class="header__link link" />
            <Button 
              class="header__login button"
              icon="/assets/images/lock.svg"
            />
          </HBox>
        </HBox>
      </tnt:ToolHeader>
    </tnt:header>
    
    <tnt:mainContents>

    <!--MAIN CONTENT-->
    <ScrollContainer vertical="true">
      <VBox class="main-content" alignItems="Center" justifyContent="Center">

        <HBox class="offer" justifyContent="SpaceBetween" width="100%">
          <VBox class="left" width="375px">
            <VBox class="info">
              <Text class="text text_h1" text="Our service started work in New York" />
              <Text class="text" width="360px" text="We make delivery exactly at the time you need - we can start to fulfill the order a few minutes after it arrives, or we can deliver on a specific day and hour." />
              <Link class="link_blue info__link" text="Read more" />
            </VBox>
            <VBox>
              <Text class="text text_h3" text="How it works" />
              <!--VIDEO-->
              <HBox class="blank info__video" width="374px" height="232px">
              </HBox>
            </VBox>
          </VBox>
          <Image class="offer__graphic" src="/assets/images/graphic.svg" />
          <VBox class="right" width="360px">
            <!--SEND A PARCEL FORM-->
            <HBox class="blank form" width="100%" height="500px">
              </HBox>
            <VBox class="track" width="100%" height="144px">
              <Text class="text text_h3" text="Track a package" />
              <SearchField 
                class="track__search search-field"
                placeholder="Enter code"  
                width="280px"
              />
            </VBox>
          </VBox>
        </HBox>

      <!--EXPRESS DELIVERY-->

        <VBox class="express" width="100%" height="648px" alignItems="Center">
          <Text class="text text_h1" text="Express delivery market revolution" />
          <Text class="text text_h4" textAlign="Center" width="754px" text="Express courier service in the city. We are a reliable logistics partner for delivery services for online stores and restaurants!" />

          <f:GridList
            class="express-pads"
            items="{AppMainModel>/expressPads}"
            width="1000px"
          >
            <f:GridListItem class="express-item">
              <VBox class="express-item-pad">
              <layoutData>
                <FlexItemData growFactor="1" shrinkFactor="0" /><!-- Don't shrink below minimum size. Fill space if available. -->
              </layoutData>
                <Text class="text text_h3" text="{AppMainModel>title}" />
                <HBox class="express-item-image">
                  <HBox class="circle-pad" >
                    <Image src="{AppMainModel>icon}" />
                  </HBox>
                    <Image src="{AppMainModel>icon2}" />
                </HBox>
                <Text class="text" text="{AppMainModel>text}" />
              </VBox>
            </f:GridListItem>
          </f:GridList>
        </VBox>
        <HBox class="express-parcel" width="100%" justifyContent="Center">
        <HBox class="express-parcel-line">
          <Image src="/assets/images/parcel.svg"/>
        </HBox>
        </HBox>

      </VBox>
      <!--/MAIN CONTENT-->
    

      <!--FOOTER-->
      <VBox class="footer">
        <HBox class="wrapper" alignItems="Start" justifyContent="Center">
          <VBox class="column">
            <HBox class="title title_lineless">
              <Text text="About Whoosh" />
            </HBox>

            <HBox class="content">
              <Image src="/assets/images/two-pins.svg" class="content__two-pins" />
              <Text width="240px" text="Express delivery of documents and parcels for organizations, express delivery of correspondence, purchases and other goods" />
            </HBox>
          </VBox>

          <HBox class="links">
            <VBox class="links-column">
              <HBox class="title" >
                <Text text="Menu" />
              </HBox>

              <List items="{path:'AppMainModel>/footerMenu'}">
                <StandardListItem title="{AppMainModel>text}" class="link"/>
              </List>          
            </VBox>

            <VBox class="links-column">
              <HBox class="title">
                <Text text="Services" />
              </HBox>

              <List items="{AppMainModel>/footerServices}">
                <StandardListItem title="{AppMainModel>text}" class="link"/>

              </List>

            </VBox>
          </HBox>

          <VBox class="column">
            <HBox class="title">
              <Text text="Contact Us" />
            </HBox>

            <VBox class="content">
              <Text class="phone" text="8 800 934 5959" />
              <HBox>
                <Image class="footer__icon" src="/assets/images/pin-blue.svg"/>
                <Text class="footer__icon-text" text="2545 W. Diversey Ave.&#13;&#10;3rd Floor Chicago, IL 60647"/>
              </HBox>
              <HBox class="social" justifyContent="SpaceBetween">
                <Button 
                class="button"
                icon="/assets/images/facebook.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/vk.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/youtube.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/instagram.svg"
                />
              </HBox>
            </VBox>
          </VBox>
        </HBox>
        
        <!--Made by line-->

        <VBox class="madeby">
          <Text class="madeby__line" text="Made by"/>
          <HBox justifyContent="Center" alignItems="Center">
            <HBox class="madeby__text madeby__text_left" justifyContent="Center" width="25%">
              <Text text="Â© 2022. All rights reserved." />
            </HBox>
            <HBox justifyContent="Center" width="50%">
              <Image src="/assets/images/pyrobyte.svg" />
            </HBox>
            <HBox class="madeby__text madeby__text_right" justifyContent="Center" width="25%">
              <Image class="footer__icon" src="/assets/images/flower.svg" />
              <Text class="footer__icon-text" text="Privacy policy" />
            </HBox>
          </HBox>
        </VBox>


      </VBox>
      </ScrollContainer>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
<mvc:View
  controllerName="App.core.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  displayBlock="true">
  <tnt:ToolPage
    class="tool-page">
    <tnt:header  style="height:80px">
      <tnt:ToolHeader class="tool-page__header">
        <HBox 
          class="tool-page__header-wrapper sapUiNoContentPadding"
          width="100%"
          justifyContent="SpaceBetween"
          alignItems="Center"  
        >
          <HBox class="tool-page__header-subwrapper" alignItems="Center">
            <Image 
              class="tool-page__header-logo"
              src="/assets/images/logo.svg" 
              />
            <ToolbarSpacer width="48px" />
            <Link text="NY, Manhattan" class="tool-page__header-link tool-page__header-city link" />
          </HBox>

          <HBox class="tool-page__header-subwrapper" alignItems="Center">
            <SearchField 
              class="tool-page__header-search search-field" 
              placeholder="Track a Package" 
              width="184px" 
            />
          </HBox>

          <HBox class="tool-page__header-subwrapper" alignItems="Center">
            <Link text="Send a Parcel" class="tool-page__header-link link" />
            <Link text="Become a Courier" class="tool-page__header-link link" />
            <Button 
              class="tool-page__header-login button"
              icon="/assets/images/lock.svg"
            />
          </HBox>
        </HBox>
      </tnt:ToolHeader>
    </tnt:header>
    
    <tnt:mainContents>

    <!--MAIN CONTENT-->
    <ScrollContainer vertical="true">
      <VBox class="main-content" alignItems="Center" justifyContent="Center">

        <HBox class="offer" justifyContent="SpaceBetween" width="100%">
          <VBox class="left" width="375px">
            <VBox class="info">
              <Text class="text text_h1" text="Our service started work in New York" />
              <Text class="text" width="360px" text="We make delivery exactly at the time you need - we can start to fulfill the order a few minutes after it arrives, or we can deliver on a specific day and hour." />
              <Link class="link_blue info__link" text="Read more" />
            </VBox>
            <VBox>
              <Text class="text text_h3" text="How it works" />
              <!--VIDEO-->
              <HBox class="blank info__video" width="374px" height="232px">
              </HBox>
            </VBox>
          </VBox>
          <Image class="offer__graphic" src="/assets/images/graphic.svg" />
          <VBox class="right" width="360px">
            <!--SEND A PARCEL FORM-->
            <HBox class="blank form" width="100%" height="500px">
              </HBox>
            <VBox class="track" width="100%" height="144px">
              <Text class="text text_h3" text="Track a package" />
              <SearchField 
                class="track__search search-field"
                placeholder="Enter code"  
                width="280px"
              />
            </VBox>
          </VBox>
        </HBox>

      </VBox>
      <!--/MAIN CONTENT-->
    

      <!--FOOTER-->
      <VBox class="footer">
        <HBox class="footer__wrapper" alignItems="Start" justifyContent="Center">
          <VBox class="footer__column">
            <HBox class="footer__title footer__title_lineless">
              <Text text="About Whoosh" />
            </HBox>

            <HBox class="footer__content">
              <Image src="/assets/images/two-pins.svg" class="two-pins" />
              <Text width="240px" text="Express delivery of documents and parcels for organizations, express delivery of correspondence, purchases and other goods" />
            </HBox>
          </VBox>

          <HBox class="footer__links">
            <VBox class="footer__links-column">
              <HBox class="footer__title" >
                <Text text="Menu" />
              </HBox>

              <List items="{path:'AppMainModel>/footerMenu'}">
                <StandardListItem title="{AppMainModel>text}" class="footer__link"/>
              </List>          
            </VBox>

            <VBox class="footer__links-column">
              <HBox class="footer__title">
                <Text text="Services" />
              </HBox>

              <List items="{AppMainModel>/footerServices}">
                <StandardListItem title="{AppMainModel>text}" class="footer__link"/>

              </List>

            </VBox>
          </HBox>

          <VBox class="footer__column">
            <HBox class="footer__title">
              <Text text="Contact Us" />
            </HBox>

            <VBox class="footer__content">
              <Text class="phone" text="8 800 934 5959" />
              <HBox>
                <Image class="footer__icon" src="/assets/images/pin-blue.svg"/>
                <Text class="footer__icon-text" text="2545 W. Diversey Ave.&#13;&#10;3rd Floor Chicago, IL 60647"/>
              </HBox>
              <HBox class="footer__social" justifyContent="SpaceBetween">
                <Button 
                class="button"
                icon="/assets/images/facebook.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/vk.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/youtube.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/instagram.svg"
                />
              </HBox>
            </VBox>
          </VBox>
        </HBox>
        
        <!--Made by line-->

        <VBox class="footer__madeby">
          <Text class="footer__madeby-line" text="Made by"/>
          <HBox justifyContent="Center" alignItems="Center">
            <HBox class="footer__madeby-text footer__madeby-text_left" justifyContent="Center" width="25%">
              <Text text="Â© 2022. All rights reserved." />
            </HBox>
            <HBox justifyContent="Center" width="50%">
              <Image src="/assets/images/pyrobyte.svg" />
            </HBox>
            <HBox class="footer__madeby-text footer__madeby-text_right" justifyContent="Center" width="25%">
              <Image class="footer__icon" src="/assets/images/flower.svg" />
              <Text class="footer__icon-text" text="Privacy policy" />
            </HBox>
          </HBox>
        </VBox>


      </VBox>
      </ScrollContainer>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>
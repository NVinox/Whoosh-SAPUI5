<mvc:View
  controllerName="App.core.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  displayBlock="true">
  <tnt:ToolPage
    class="tool-page">
    <tnt:header>
      <tnt:ToolHeader class="tool-page__header">
        <HBox class="tool-page__header-wrapper">
          <HBox class="tool-page__header-subwrapper">
            <Image 
              class="tool-page__header-logo"
              src="/assets/images/logo.svg" 
              />
            <ToolbarSpacer width="48px" />
            <Link text="NY, Manhattan" class="tool-page__header-link tool-page__header-city" />
          </HBox>
          <SearchField 
            class="tool-page__header-search" 
            placeholder="Track a Package" 
            width="184px" 
          />
          <HBox class="tool-page__header-subwrapper">
            <Link text="Send a Parcel" class="tool-page__header-link" />
            <Link text="Become a Courier" class="tool-page__header-link" />
            <Button 
              class="tool-page__header-login button"
              icon="/assets/images/lock.svg"
            />
          </HBox>
        </HBox>
      </tnt:ToolHeader>
    </tnt:header>
    
  </tnt:ToolPage>
</mvc:View>
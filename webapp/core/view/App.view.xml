<mvc:View
  controllerName="App.core.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:f="sap.f"
  xmlns:grid="sap.ui.layout.cssgrid"
  displayBlock="true">
  <tnt:ToolPage
    class="tool-page">
    <tnt:header>
      <tnt:ToolHeader class="header">
        <HBox 
          width="100%" 
          justifyContent="Center"
          visible="{= ${AppMainModel>/typeSize} &lt; 1366 ? false : true}"  
          >
          <HBox 
            class="wrapper"
            width="100%"
            height="80px"
            justifyContent="SpaceBetween"
            alignItems="Center"
          >
            <HBox class="subwrapper" alignItems="Center">
              <Image 
                class="header__logo"
                mode="InlineSvg"
                src="/assets/images/header/logo.svg" 
              />
              <ToolbarSpacer width="48px" />
              <Link text="NY, Manhattan" class="header__link header__link_pin link" />
            </HBox>

            <HBox class="subwrapper" alignItems="Center">
              <SearchField 
                class="header__search search-field" 
                placeholder="Track a Package" 
                width="184px" 
              />
            </HBox>

            <HBox class="subwrapper" alignItems="Center">
              <Link text="Send a Parcel" class="header__link link" />
              <Link text="Become a Courier" class="header__link link" />
              <Button 
                class="header__login button"
                icon="/assets/images/header/lock.svg"
              />
            </HBox>
          </HBox>
        </HBox>

        <!--HEADER FOR ADAPTIVE-->
        <HBox 
          class="header-small" 
          width="100%" 
          height="64px"
          alignItems="Center" 
          justifyContent="SpaceBetween" 
          visible="{= ${AppMainModel>/typeSize} &lt; 1366 ? true : false}">
          <Image class="header-small__profile" src="/assets/images/header/profile.svg" press=""/>
          <Image class="header-small__logo" width="120px" src="/assets/images/header/logo.svg" />
          <Image class="header-small__menu-btn" src="/assets/images/header/menu.svg" press="onToggleSideMenu"/>
        </HBox>

      <!--SIDE MENU-->
      <HBox id="screenWrapper" class="screen-wrapper" width="{= ${AppMainModel>/sideMenu/isClosed} ? '0' : '100%'}" height="100%">
        <VBox 
          id="tapBox"
          class="tap-box"
          width="100%"
          height="100vh">
        </VBox>

        <VBox id="sideMenu" class="side-menu" width="274px" height="100vh" justifyContent="SpaceBetween" alignItems="Center">
          <VBox class="side-menu__wrapper" width="100%">
            
            <HBox class="side-menu-header" width="100%" height="64px" alignItems="Center" justifyContent="SpaceBetween">
              <Link text="NY, Manhattan" class="side-menu-header__link side-menu-header__link_pin link" />
              <Image class="side-menu__menu-btn" src="/assets/images/header/x.svg" press="onToggleSideMenu"/>
            </HBox>
          
            <VBox class="side-menu__subwrapper" width="100%">
              <SearchField 
                class="side-menu__search search-field" 
                placeholder="Track a Package" 
                width="242px" 
              />
              <Link text="Send a Parcel" class="header__link link" />
              <Link text="Become a Courier" class="header__link link" />
              <Link text="Affiliate Program" class="header__link link" />
              <Link text="Help &amp; Support" class="header__link link" />
            </VBox>
          </VBox>

          <Button 
                class="side-menu__button button text_h5"
                width="242px"
                text="Take a complex order"
              />
        </VBox>
      </HBox>
      </tnt:ToolHeader>
    </tnt:header>
    
    <tnt:mainContents>

    <!--MAIN CONTENT-->
    <ScrollContainer vertical="true">
      <VBox class="main-content" height="100%" alignItems="Center" justifyContent="Center">
        <layoutData>
          <FlexItemData growFactor="1" shrinkFactor="0" />
        </layoutData>

        <!--OFFER-->

        <HBox class="offer" justifyContent="Center" width="100%">
          <HBox class="content-wrapper" width="100%" alignItems="{= ${AppMainModel>/typeSize} &lt; 1024 ? 'Center' : 'Inherit'}" justifyContent="SpaceBetween">
            <VBox class="left" width="{= ${AppMainModel>/typeSize} &lt; 1024 ? '328px' : '375px'}">
                <Text class="text text_h1" text="Our service started work in New York" />
                <Text class="left__text text" width="100%" text="We make delivery exactly at the time you need - we can start to fulfill the order a few minutes after it arrives, or we can deliver on a specific day and hour." />
                <Link class="left__link link_blue" text="Read more" />
                <Text class="text text_h3" text="How it works" />
                <!--VIDEO-->
                <HBox class="blank left__video" width="100%" height="{= ${AppMainModel>/typeSize} &lt; 1024 ? '200px' : '232px'}">
                </HBox>
            </VBox>
            <Image class="offer__graphic" src="{= ${AppMainModel>/typeSize} &lt; 1024 ? '/assets/images/offer/city.svg' : '/assets/images/offer/graphic.svg'}" />
            <VBox class="right" width="{= ${AppMainModel>/typeSize} &lt; 1024 ? '328px' : '360px'}">
              <!--SEND A PARCEL FORM-->
              <VBox class="offer__form" width="100%" height="{= ${AppMainModel>/typeSize} &lt; 1024 ? '472px' : '500px'}">
                <HBox class="offer__title" alignItems="Center">
                  <Text class="text text_h3 sapUiTinyMarginEnd" text="Send a Parcel" />
                  <Button class="button-clue" icon="/assets/images/offer/clue.svg" />
                </HBox>

                <VBox>
                  <IconTabBar class="">
                    <items>
                      <IconTabFilter
                        key="Bike"
                        icon="assets/images/tabs/onFoot.svg"
                        text="up to 10lb"
                      />
                      <IconTabFilter
                        key="Car"
                        icon="assets/images/tabs/car.svg"
                        text="up to 130lb"
                      />
                      <IconTabFilter
                        key="Truck"
                        icon="assets/images/tabs/truck.svg"
                        text="over 130lb"
                      />
                    </items>
                  </IconTabBar>

                </VBox>
              </VBox>
              <VBox class="track" width="100%" height="{= ${AppMainModel>/typeSize} &lt; 1024 ? '128px' : '144px'}">
                <Text class="text text_h3" text="Track a package" />
                <SearchField 
                  class="track__search search-field"
                  placeholder="Enter code"  
                  width="100%"
                />
              </VBox>
            </VBox>
          </HBox>  
        </HBox>

      <!--EXPRESS DELIVERY-->

        <VBox class="express" width="100%" alignItems="Center">
          <Text class="text text_h1" textAlign="Center" text="Express delivery market revolution" />
          <Text class="text text_h4" textAlign="Center" width="100%" text="Express courier service in the city. We are a reliable logistics partner for delivery services for online stores and restaurants!" />

          <f:GridList
            class="pads"
            items="{AppMainModel>/expressPads}"
            width="1000px"
          >
            <f:GridListItem class="item">
              <VBox class="item__pad" height="100%" justifyContent="SpaceBetween">
              <layoutData>
                <FlexItemData growFactor="1" shrinkFactor="0" /><!-- Don't shrink below minimum size. Fill space if available. -->
              </layoutData>
                <Text class="text text_h3" text="{AppMainModel>title}" />
                <HBox class="item__image">
                  <HBox class="circle-pad" >
                    <Image src="{AppMainModel>icon}" />
                  </HBox>
                    <Image src="{AppMainModel>icon2}" />
                </HBox>
                <Text class="text" text="{AppMainModel>text}" />
              </VBox>
            </f:GridListItem>
          </f:GridList>
        </VBox>

        <!--PARCEL LINE-->
        <HBox class="parcel" width="100%" justifyContent="Center">
          <HBox class="parcel-line">
            <Image src="/assets/images/parcel.svg"/>
          </HBox>
        </HBox>

        <!--PARTNERS-->
        <VBox class="partners" width="100%" alignItems="Center">
        
          <VBox width="100%" justifyContent="Center" alignItems="Center">
            <Text class="text text_h1" text="Our Partners" />
            <HBox class="collaborate">
            <Button 
              class="collaborate__button button" 
              icon="/assets/images/partners/collaborate.svg"
              text="Let's collaborate"  
            />
            </HBox>
          </VBox>

          <HBox class="logos" width="100%" items="{AppMainModel>/partners}">
          <layoutData>
            <FlexItemData maxWidth="1104px" />
          </layoutData>
            <HBox class="logos_monochrome" alignItems="Center">
              <Image class="logos__logo" src="{AppMainModel>logo}" />
            </HBox>
          </HBox>

        </VBox>

        <!--WHAT WE DO-->

        <VBox class="what-we-do" width="100%" alignItems="Center">
          <HBox class="what-we-do__bgimage">
            <Image src="/assets/images/what-we-do/city.png" />
          </HBox>
          <Text class="text text_h1" textAlign="Center" text="What we do" />
          <Text class="text text_h4" textAlign="Center" width="100%" text="Express courier service in the city. We are a reliable logistics partner for delivery services for online stores and restaurants!" />

          <HBox class="pads" items="{AppMainModel>/whatWeDo}">
            <VBox 
              class="pad" 
              width="{= ${AppMainModel>/typeSize} &lt; 1024 ? '328px' : '300px'}"
              height="{= ${AppMainModel>/typeSize} &lt; 1024 ? '212px' : '236px'}"
            >
              <HBox class="circle-pad">
                <Image src="{AppMainModel>icon}" width="{= ${AppMainModel>/typeSize} &lt; 1024 ? '32px' : '40px'}" />
              </HBox>
              <HBox class="pad__title" alignItems="Center">
                <Text class="text text_h3" text="{AppMainModel>title}" />
                <Link class="link link_blue link_blue_underlined" text="{AppMainModel>link}" />
              </HBox>
              <Text class="text" textAlign="{= ${AppMainModel>/typeSize} &lt; 1024 ? 'Center' : 'Left'}" text="{AppMainModel>text}" />
            </VBox>

          </HBox>

          <Button class="what-we-do__button button" text="Get started!" width="296px" />

        </VBox>

        <!--PAYMENT METHODS-->

        <VBox class="payment" width="100%" alignItems="Center">
          <Text class="text text_h1" text="Payment methods" />

          <HBox class="slider" width="100%" items="{AppMainModel>/payment}">
            <layoutData>
              <FlexItemData maxWidth="1172px" />
            </layoutData>
            <Image src="{AppMainModel>logo}" width="84px" />
          </HBox>

        </VBox>

        <!--PARCEL LINE-->
        <HBox class="parcel" width="100%" justifyContent="Center">
          <HBox class="parcel-line">
            <Image src="/assets/images/parcel.svg"/>
          </HBox>
        </HBox>

        <!--INFO-->

        <VBox class="info" alignItems="Center">
          <VBox class="info__text" width="100%" alignItems="End">
            <Text id="info__test" class="text" binding="{AppMainModel>/infoText}" text="{= ${AppMainModel>text} + (!!${AppMainModel>isVisible} ? ('\n\n' + ${AppMainModel>textHideable}) : '' )}" />
            <Button class="info__etc" width="25px" icon="/assets/images/info/etc.svg" press="onInfoToggle"/>
            <layoutData>
              <FlexItemData maxWidth="1160px" />
            </layoutData>
          </VBox>
        </VBox>


      </VBox>
      <!--/MAIN CONTENT-->
    

      <!--FOOTER-->
      <VBox class="footer" justifyContent="Center" alignItems="Center">
        <HBox 
          class="wrapper" 
          width="100%" 
          alignItems="{= ${AppMainModel>/typeSize} &lt; 1240 ? 'Center' : 'Start'}" 
          justifyContent="SpaceBetween"
        >
          <VBox class="column">
            <HBox class="title title_lineless">
              <Text text="About Whoosh" />
            </HBox>

            <HBox class="content">
              <Image src="/assets/images/footer/two-pins.svg" class="content__two-pins" />
              <Text width="240px" text="Express delivery of documents and parcels for organizations, express delivery of correspondence, purchases and other goods" />
            </HBox>
          </VBox>

          <HBox class="links">
            <VBox class="links-column">
              <HBox class="title" >
                <Text text="Menu" />
              </HBox>

              <List items="{path:'AppMainModel>/footerMenu'}">
                <StandardListItem title="{AppMainModel>text}" class="link"/>
              </List>          
            </VBox>

            <VBox class="links-column">
              <HBox class="title">
                <Text text="Services" />
              </HBox>

              <List items="{AppMainModel>/footerServices}">
                <StandardListItem title="{AppMainModel>text}" class="link"/>

              </List>

            </VBox>
          </HBox>

          <VBox class="column" width="{= ${AppMainModel>/typeSize} &lt; 1240 ? '100%' : 'auto'}">
            <HBox class="title">
              <Text text="Contact Us" />
            </HBox>

            <VBox class="content">
              <Text class="phone" text="8 800 934 5959" />
              <HBox>
                <Image class="footer__icon" src="/assets/images/footer/pin-blue.svg"/>
                <Text class="footer__icon-text" text="2545 W. Diversey Ave.&#13;&#10;3rd Floor Chicago, IL 60647"/>
              </HBox>
              <HBox class="social" width="100%" justifyContent="SpaceBetween">
                <Button 
                class="button"
                icon="/assets/images/footer/facebook.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/footer/vk.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/footer/youtube.svg"
                />
                <Button 
                  class="button"
                  icon="/assets/images/footer/instagram.svg"
                />
              </HBox>
            </VBox>
          </VBox>
        </HBox>
        
        <!--Made by line-->

        <VBox class="madeby" width="100%">
          <layoutData>
            <FlexItemData maxWidth="1160px" />
          </layoutData>
          <HBox 
              justifyContent="Center" 
              alignItems="Center"
              width="100%"
              visible="{= ${AppMainModel>/typeSize} &lt; 1240 ? true : false}">
              <Image src="/assets/images/footer/pyrobyte_red.svg" />
            </HBox>
          <Text class="madeby__line" text="Made by"/>
          <HBox class="madeby__content" justifyContent="Center" alignItems="Center">
            <HBox 
              class="madeby__text madeby__text_left" 
              justifyContent="Center" 
              width="{= ${AppMainModel>/typeSize} &lt; 1240 ? '100%' : '25%'}"
            >
              <Text text="© 2022. All rights reserved." />
            </HBox>
            <HBox 
              justifyContent="Center" 
              width="50%"
              visible="{= ${AppMainModel>/typeSize} &lt; 1240 ? false : true}">
              <Image src="/assets/images/footer/pyrobyte.svg" />
            </HBox>
            <HBox 
              class="madeby__text madeby__text_right" 
              justifyContent="Center" 
              width="{= ${AppMainModel>/typeSize} &lt; 1240 ? '100%' : '25%'}"
            >
              <Image class="footer__icon" src="/assets/images/footer/flower.svg" />
              <Text class="footer__icon-text" text="Privacy policy" />
            </HBox>
          </HBox>
        </VBox>


      </VBox>
      </ScrollContainer>
    </tnt:mainContents>
  </tnt:ToolPage>
</mvc:View>